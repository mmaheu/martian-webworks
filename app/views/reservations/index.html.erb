<p id="notice"><%= notice %></p>

<h1>Listing Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Destination</th>
      <th>Pickup time</th>
      <th>Auto type</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.location %></td>
        <td><%= reservation.destination %></td>
        <td><%= reservation.pickup_time %></td>
        <td><%= reservation.auto_type %></td>
        <td><%= reservation.email %></td>
        <td><%= reservation.phone %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

